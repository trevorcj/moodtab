{
  "manifest_version": 3,
  "name": "MoodTab",
  "description": "A calm new tab with lo-fi music, quotes, and aesthetic vibes",
  "version": "1.0",
  "author": "Chimamanda Justus",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "icons": {
    "16": "icons/favicon-16x16.png",
    "128": "icons/android-chrome-128x128.png",
    "192": "icons/android-chrome-192x192.png"
  },
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  }
}
